@model MVCEFOpdracht.Models.Component

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Toevoegen</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Component</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Categorie, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Categorie)
                @Html.ValidationMessageFor(model => model.Categorie)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Naam, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Naam)
                @Html.ValidationMessageFor(model => model.Naam)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DatasheetLink, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DatasheetLink)
                @Html.ValidationMessageFor(model => model.DatasheetLink)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Aankoopprijs, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Aankoopprijs)
                @Html.ValidationMessageFor(model => model.Aankoopprijs)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Aantal, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Aantal)
                @Html.ValidationMessageFor(model => model.Aantal)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Voeg toe" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Terug naar het overzicht", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
